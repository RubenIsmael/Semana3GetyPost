@model Semana_3.Models.PacienteModel

<h2>Eliminar Paciente</h2>

<div>
    <h4>¿Estás seguro de que deseas eliminar a @Model.Nombre @Model.Apellido?</h4>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IdPaciente" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>