@model Semana_3.Models.HabitacionModel

<h2>Eliminar Habitación</h2>

<div>
    <h4>¿Estás seguro de que deseas eliminar la habitación @Model.NumeroHabitacion?</h4>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IdHabitacion" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>