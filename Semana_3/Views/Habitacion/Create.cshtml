@model Semana_3.Models.HabitacionModel

<h2>Agregar Habitación</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NumeroHabitacion"></label>
        <input asp-for="NumeroHabitacion" class="form-control" />
        <span asp-validation-for="NumeroHabitacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>